load("steal/rhino/rhino.js");
steal('steal/build',
	  'steal/build/scripts',
	  'steal/build/styles', 
	  'steal/build/apps', 
	  
function () {
    //check if args
    var urls = [];
    while (_args.length) {
        if (_args[0].indexOf('-') !== 0) {
            urls.push(_args.shift());
        } else {
            break;
        }
    }

    if (urls.length > 1) {
        steal.build.apps(urls);
    } else {
        steal.build(urls[0], _args);
    }

});